{
  "name": "help-me-modernize",
  "version": "1.0.0",
  "description": "Educational learning tool teaching modern development through legacy code modernization - MCP, AI integration, and enterprise patterns",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "start:mcp": "tsx src/mcp-server.ts",
    "start:web": "tsx src/server.ts",
    "test": "jest",
    "test:output": "jest --verbose --outputFile=test-results.json --json > test-output.txt 2>&1",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit",
    "build:watch": "tsc --watch",
    "logs": "tail -f logs/application.log"
  },
  "keywords": [
    "educational-tool",
    "learning-platform", 
    "mcp",
    "model-context-protocol",
    "typescript-education",
    "ai-integration-tutorial",
    "enterprise-patterns",
    "legacy-code",
    "modernization",
    "claude",
    "anthropic",
    "hands-on-learning"
  ],
  "author": "Developer Relations Showcase",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "jsdom": "^22.1.0",
    "marked": "^9.1.2",
    "multer": "^1.4.5-lts.1",
    "pdf-lib": "^1.17.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.14",
    "@types/jsdom": "^21.1.4",
    "@types/multer": "^1.4.8",
    "@types/node": "^20.8.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.5",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
